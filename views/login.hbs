
<div class="container-fluid login-page" style="display: block">
  <div class="row">
    <div class="col-10 container-login">
      <header>
        <h1>
          <img src="/images/logo-footbook2.png" alt="Logo">
        </h1>
      </header>
      <div class="row d-flex justify-content-center">
        <form class="col-10 registration-form" action="/login" method="POST">
          <label>
            <span class="label-text">Username</span>
            <input type="text" name="username">
          </label>
          <label class="password pt-3">
            <span class="label-text">Password</span>
            <input type="password" name="password">
          </label>
          <div class="text-center pt-4">
            <button class="submit" name="register">Login</button>
          </div>
          <div class="text-center">
            <p class="pt-3">Don't have an account? </p>
          </div>
          <div class="text-center">
            <button onclick="signUpPage()" type="button" class="btn btn-outline-success btn-sm">Sign Up!</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>