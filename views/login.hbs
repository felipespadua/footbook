
<div class="container-fluid login-page bg-start" style="display: block">
  <div class="row filter-black">
    <div class="col-10 container-login" >
      <header>
        <h1>
          <img class="img-logo" src="/images/footbooklogo.png" alt="Logo">
        </h1>
      </header>
      <div class="row d-flex justify-content-center">
        <form class="col-10 registration-form" action="/login" method="POST">
          <label>
            <span class="label-text">Username</span>
            <input type="text" class="white-text" name="username">
          </label>
          <label class="password pt-3">
            <span class="label-text">Password</span>
            <input type="password" class="white-text" name="password">
          </label>
          <div class="text-center mt-2 pt-md-2">
            {{!-- <button class="submit" name="register">Login</button> --}}
            <button name="register" class="submit btn btn-elegant">Login</button>
          </div>
           <div class="text-center mt-3 pt-md-2">
            <i class="fab fa-facebook-square fa-2x px-2"></i>
            <i class="fab fa-google-plus-square fa-2x px-2"></i>
            <i class="fab fa-twitter-square fa-2x px-2"></i>
          </div>
          <div class="text-center">
            <p class="pt-2" style="color:white!important">Don't have an account?</p>
          </div>
          <div class="text-center d-flex align-items-center justify-content-center px-3">
            <button onclick="signUpPage()" type="button" class="btn btn-dark btn-sm">Sign Up!</button>
          </div>
        </form>
      </div>
    </div>
  </div>
   <script src="/javascripts/login.js"></script>
</div>