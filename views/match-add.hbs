<div class="container-fluid match-add-page">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="col-md-6 col-11 container-add pb-5" data-aos="fade-up">
      <div class="row d-flex justify-content-center mt-5 pt-3 pb-4">
        <form class="col-12 registration-form" action="/match/add" method="POST">
          <div class="row">
            <div class="col-12 col-md-6">
              <label class="pt-3">
                <span class="label-text">Match name</span>
                <input type="text" maxlength="11" class="text-white" required name="title">
              </label>
              <label class="pt-3">
                <span class="label-text">Date</span>
                <input type="date" class="text-white" required name="date">
              </label>
              <label class="pt-3">
                <span class="label-text">Match Time</span>
                <input type="time" class="text-white" required name="matchTime">
              </label>
            </div>
            <div class="col-12 col-md-6">
              <label class="pt-3">
                <span class="label-text">Total Players</span>
                <input type="number" class="text-white" required min="4" max="30" name="totalPlayers">
              </label>
              <label class="pt-3">
                <span class="label-text">Description</span>
                <input type="text" class="text-white" maxlength="20" name="description">
              </label>
              <label class="pt-3">
                <span class="label-text">Stadium</span>
                <select name="field" id="stadium" class="browser-default custom-select">
                  <option selected=true value="select">Select a field</option>
                  {{#each fields}}
                     <option value="{{this.id}}">{{this.name}}</option>
                  {{/each}}
                  <option value="Other" name="Other">Other</option>
                </select>
              </label>
              <label id="locationlabel" class="pt-3">
                <span class="label-text">Location</span>
                <input id="autocompleteNewMatch" class="text-white" required name="location">
                <input type="hidden" id="locationNewMatch" name="street" />
                <input type="hidden" id="newMatchLat" name="latitude" />
                <input type="hidden" id="newMatchLng" name="longitude" />
              </label>
            </div>
            <div class="col-12 text-center pt-4 d-flex justify-content-center">
                <button name="register" class="submit btn btn-elegant">Create Match</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="/javascripts/match-add.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key={{googleApiKey}}"></script>
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key={{googleApiKey}}&libraries=places"></script>
