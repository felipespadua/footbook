<div class="container-fluid signup-page bg-start">
  <div class="row filter-black">
    <div class="col-10 container-signup">
      <header>
        <h1>
          <img class="img-logo" src="/images/footbooklogo.png" alt="Logo">
        </h1>
      </header>
      <div class="row d-flex justify-content-center">
        <form action="/signup" class="col-10 registration-form" method="POST">
          <label>
            <span class="label-text">Username</span>
            <input type="text" class="white-text" name="username">
          </label>
          <label>
            <span class="label-text">Email</span>
            <input type="email" class="white-text" name="email">
          </label>
          <label class="password">
            <span class="label-text">Password</span>
            <input id="password" type="password" class="white-text" name="password">
            <meter max="4" id="password-strength-meter"></meter>
            <p id="password-strength-text"></p>
          </label>
          <div class="text-center pt-5">
            <button type="submit" name="register" class="submit btn btn-elegant">Sign Up</button>
            {{!-- <button type="submit" class="submit" name="register">Sign Up</button> --}}
          </div>
          {{#if message}}
          <div class="error-message text-center">{{message}}</div>
          {{/if}}
        </form>

      </div>
    </div>
  </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/zxcvbn/4.2.0/zxcvbn.js"></script>
<script src="/javascripts/signup.js"></script>
