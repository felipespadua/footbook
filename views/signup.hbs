<div class="container-fluid signup-page">
  <div class="row">
    <div class="col-10 container-signup">
      <header>
        <h1>
          <img src="/images/logo-footbook2.png" alt="Logo">
        </h1>
      </header>
      <div class="row d-flex justify-content-center">
        <form action="/signup" class="col-10 registration-form" method="POST">
          <label>
            <span class="label-text">Username</span>
            <input type="text" name="username">
          </label>
          <label>
            <span class="label-text">Email</span>
            <input type="text" name="email">
          </label>
          <label class="password">
            <span class="label-text">Password</span>
            <input type="password" name="password">
          </label>
          <div class="text-center pt-5">
            <button type="submit" class="submit" name="register">Sign Up</button>
          </div>
          {{#if message}}
            <div class="error-message">{{message}}</div>
          {{/if}}
        </form>

      </div>
    </div>
  </div>
</div>
